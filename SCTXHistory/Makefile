#!/usr/bin/make -f
# philippeg mar2014
# Fetch all jira issues for project SCTX
# Plot by month, by release
# using the jira SQL interface, see: https://developer.atlassian.com/display/JIRADEV/Database+Schema 
#
.PHONY: login jiraquery clean reallyclean check test
include ../jira.mk
####################autogen variables#######################################
deployTarget=/local/scratch/jiraanalysis
jiratargets=SCTXbyDateAndRelease.csv SCTXSumByMonth.csv
gnuplottargets=SCTX.byQuarter.png
gnuplottargets+=SCTX.byMonth.png
#autogenerated targets
thumbnails:=$(subst .png,.thumb.png,$(gnuplottargets))
###################rules#####################################################
all: SCTX.byQuarter.csv SCTX.byMonth.csv $(gnuplottargets) $(thumbnails)
jiraquery: $(jiratargets)
%.csv: %.sql
	$(setJiraPass) ; $(ConnectToJira) --field-separator="," --no-align --tuples-only -f  $< > $@

SCTX.byMonth.csv: SCTXbyDateAndRelease.csv
	./list2matrix.pl xsreleases < $< > $@

SCTX.byQuarter.csv: SCTX.byMonth.csv	
	./month2quarter.pl < $< > $@

#to update the graph up to the latest date, change the xmax label below
%.byQuarter.png: %.byQuarter.csv
	gnuplot -e "title='XenServer LCM Quarterly';outfile='$@';infile='$<';xmin='2';xmax='28';ylabel='# issues';xlabel='Quarter'"  csv2stackedLines.gnuplot
%.byMonth.png: %.byMonth.csv
	gnuplot -e "title='XenServer LCM Monthly';outfile='$@';infile='$<';xmin='5';xmax='84';ylabel='# issues';xlabel='Month'"  csv2stackedLines.gnuplot
%.thumb.png: %.png
	convert $< -thumbnail x200 $@
login:
	$(setJiraPass) ; $(ConnectToJira)
clean: 
	rm -f $(gnuplottargets) $(thumbnails) SCTX.byQuarter.csv SCTX.byMonth.csv
reallyclean: clean
	rm -f $(jiratargets)
################testing######################################################
deploy:
	cp *.csv $(deployTarget)/csv/
	cp *.png $(deployTarget)/png/
	cp *.thumb.png $(deployTarget)/thumb/
test: 
	@echo $(thumbnails)















	

   





